<h1>Medicinal Plants</h1>

<div class="add"><a class="btn" href="/plants/new">Add a Plant</a></div>

<div class="plants">
  <% @plants.each do |plant| %>
  <div class="row">
    <img src="<%= plant.photo_url %>" alt="<%= plant.name %> photo">
    <ul>
      <li>
        <h2>
          <a href="/plants/<%= plant.id %>">
            <%= plant.name %>
          </a>
        </h2>
      </li>
      <li>
        <a href="/plants/<%= plant.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <li>
          <form action="/plants/<%= plant.id %>/delete" method="post">
            <button>Delete</button>
          </form>
        </li>
      </li>
    </ul>
  </div>
  <% end %>
</div>
